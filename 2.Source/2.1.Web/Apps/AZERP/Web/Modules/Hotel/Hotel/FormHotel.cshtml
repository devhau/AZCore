@model FormHotel
<az-module-layout script-random='(id)=>$"$(\".{id}\").AZManager();"'>
    <div class="az-manager"  data-form-size="az-modal-xl">
        <div class="az-toolbar">
            
            <button type="button" class="btn btn-success btn-sm az-btn az-btn-add" data-cmd-key="f1"><i class="far fa-plus-square"></i> Thêm Mới (F1)</button>
            <button type="button" class="btn btn-info btn-sm az-btn az-btn-export" data-cmd-key="f2"><i class="fas fa-file-export"></i> Xuất Excel (F2)</button>
            <button type="button" class="btn btn-secondary btn-sm az-btn az-btn-import" data-cmd-key="f3"><i class="fas fa-file-import"></i> Nhập Excel (F3)</button>
        </div>
        <div class="az-search-manager">
            <div class="row">
                <div class="col-md-10">
                    <form class="az-search-form row">
                        <az-hidden-model model="Model" func="(item)=>((FormHotel)item).PageSize" />
                        <div class="form-group col-md-2">
                            <az-text-model model="Model" func="(item)=>((FormHotel)item).HotelName" label="Tên phòng trọ" />
                        </div>
                        <div class="form-group col-md-3">
                            <az-area-select model="Model" func="(item)=>((FormHotel)item).AreaID" label="Khu vực/ tòa nhà" />
                        </div>
                        <div class="form-group col-md-2">
                            <az-typeOfHotel-select model="Model" func="(item)=>((FormHotel)item).TypeOfHotelID" label="Loại phòng trọ" />
                        </div>
                        <div class="form-group col-md-2">
                            <az-hotel-status-select model="Model" func="(item)=>((FormHotel)item).HotelStatus" label="Trạng thái phòng" />
                        </div>
                        <div class="form-group col-md-2">
                            <az-text-model model="Model" func="(item)=>((FormHotel)item).RoomCharge" label="Tiền phòng" />
                        </div>
                    </form>
                </div>
                <div class="col-md-2 align-self-center">
                    <div class="btn-group float-right ">
                        <button type="button" class="btn btn-warning  az-btn az-btn-search"><i class="fas fa-search"></i> Tìm kiếm</button>
                        <button type="button" class="btn btn-warning  dropdown-toggle dropdown-icon az-btn" data-toggle="dropdown">
                            <span class="sr-only">Tìm kiếm nâng cao</span>
                            <div class="dropdown-menu" role="menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="az-data-table">
            <az-table data="Model.Data" FunKey="(item)=>((HotelModel)item).Id" columns="Model.Columns" pagination="Model" />
        </div>
        <div class="az-bottom-manager">
            <az-pagination pagination="Model" />
        </div>
    </div>
</az-module-layout>