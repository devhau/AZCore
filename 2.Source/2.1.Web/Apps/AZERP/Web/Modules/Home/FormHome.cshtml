    </div>
</div>
<!--/ catagory_area -->
<!-- job_listing_area_start  -->
<div class="job_listing_area">
    <div class="container" style="padding-top:10px;">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="section_title">
                    <h3>Danh sách việc làm</h3>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="brouse_job text-right">
                    <a href="/tim-kiem-viec-lam.az" class="boxed-btn4">Tìm kiếm nâng cao</a>
                </div>
            </div>
        </div>
        <div class="job_lists">
            <div class="row">
                @foreach (var item in Model.jobInfos)
                {
                    @Model.ViewChild("Component/JobInfo", item);
                }
            </div>
        </div>
    </div>
</div>
<!-- job_listing_area_end  -->
