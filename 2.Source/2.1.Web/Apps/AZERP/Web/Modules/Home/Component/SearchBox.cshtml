@model JobInfoModel
<az-style module="SearchBox.css"/>
<div class="catagory_area search_box">
    <div class="container">
        <az-tab-control is-link="true">
            <az-tab-page name="Tìm việc làm" link="/tim-viec-lam.az">
                <div class="row m-0">
                    <div class="col-lg-3 col-md-4">
                        <div class="single_input">
                            <input type="text" class="form-control" placeholder="Tìm kiếm">
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4">
                        <div class="single_input">
                            <select class="wide">
                                <option data-display="Địa phương">Địa phương</option>
                                <option value="1">Quế võ 1 - Bắc Ninh</option>
                                <option value="2">Quế võ 2 - Bắc Ninh</option>
                                <option value="4">Quế võ 3 - Bắc Ninh</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-4">
                        <div class="single_input">
                            <select class="wide">
                                <option data-display="Công việc">Công việc</option>
                                <option value="1">Công nhân</option>
                                <option value="2">Quản lý</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-12">
                        <div class="job_btn">
                            <a href="#" class="boxed-btn3">Tìm kiếm</a>
                        </div>
                    </div>
                </div>
            </az-tab-page>
            <az-tab-page name="Tìm ứng viên" link="/tim-ung-vien.az">
                <h3>Khung hiển thị form tìm công ty</h3>
            </az-tab-page>
            <az-tab-page name="Tìm nhà trọ" link="/tim-nha-tro.az">
                <h3>Khung hiển thị form tìm nhà trọ</h3>
            </az-tab-page>
            <az-tab-page name="Tìm công ty" link="/tim-cong-ty.az">
                <h3>Khung hiển thị form tìm công ty</h3>
            </az-tab-page>
        </az-tab-control>

        <div class="row">
            <div class="col-12" style="padding-bottom:10px"></div>
        </div>
        <div class="row">
            <div class="col-md-4 text-center">
                <button class="btn btn-danger btn-lg"><i class="fas fa-bullhorn fa-home-search-box"></i><p>Đăng tuyển dụng</p></button>
            </div>
            <div class="col-md-4 text-center">
                <button class="btn btn-success btn-lg"><i class="fas fa-id-badge fa-home-search-box"></i><p>Đăng ký tài khoản</p></button>
            </div>
            <div class="col-md-4 text-center">
                <button class="btn btn-info btn-lg"><i class="fas fa-hotel fa-home-search-box"></i><p>Gửi thông tin nhà trọ</p></button>
            </div>
        </div>
        </div>
    </div>
 