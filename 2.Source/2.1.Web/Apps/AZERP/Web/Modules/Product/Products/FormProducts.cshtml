@model FormProducts
<az-module-layout script-random='(id)=>"$(\"."+id+"\").AZManager();"'>
    <div class="az-manager" data-form-size="az-modal-xl">
        <div class="az-toolbar">
            <az-button class="btn btn-success btn-sm az-btn az-btn-add" cmd-key="f1" icon="far fa-plus-square" for-permission="@PE.Product_Add" text="Thêm Mới (F1)" />
            <az-button class="btn btn-info btn-sm az-btn az-btn-export" cmd-key="f2" icon="fas fa-file-export" for-permission="@PE.Product_Export" text="Xuất Excel (F2)" />
            <az-button class="btn btn-secondary btn-sm az-btn az-btn-import" cmd-key="f3" icon="fas fa-file-import" for-permission="@PE.Product_Import" text="Nhập Excel (F3)" />
            <az-link href="/loai-san-pham.az" class="btn btn-secondary btn-sm az-btn az-link-popup"  modal-size="az-modal-xl" cmd-key="f4" icon="fa fa-list-alt" text="Nhóm sản phẩm (F4)" />
        </div>
        <div class="az-search-manager">
            <div class="row">
                <div class="col-md-10">
                    <form class="az-search-form row">
                        <az-hidden-model model="Model" func="(item)=>((FormProducts)item).PageSize" />
                        <div class="col-md-10">
                            <az-text-model model="Model" func="(item)=>((FormProducts)item).Name" placeholder="Tìm kiếm tên sản phẩm" />
                        </div>
                        <div class="col-md-2">
                            <az-category-select model="Model" func="(item)=>((FormProducts)item).CategoryId" null-text="Tất cả nhóm" />
                        </div>
                    </form>
                </div>
                <div class="col-md-2">
                    <div class="btn-group float-right ">
                        <az-button class="btn btn-warning  az-btn az-btn-search" icon="fas fa-search" text="Tìm kiếm" />
                        <az-button class="btn btn-warning  dropdown-toggle dropdown-icon az-btn" data-toggle="dropdown">
                            <span class="sr-only">Tìm kiếm nâng cao</span>
                            <div class="dropdown-menu" role="menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </az-button>
                    </div>
                </div>
            </div>
        </div>
        <div class="az-data-table">
            <az-table data="Model.Data" FunKey="(item)=>((ProductModel)item).Id" columns="Model.Columns" is-edit="Model.HasPermission(PE.Product_Edit)" is-delete="Model.HasPermission(PE.Product_Remove)" pagination="Model"></az-table>
        </div>
        <div class="az-bottom-manager">
            <az-pagination pagination="Model" />
        </div>
    </div>
</az-module-layout>
