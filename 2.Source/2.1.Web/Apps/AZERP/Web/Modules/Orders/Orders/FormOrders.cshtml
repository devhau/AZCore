@model FormOrders
<az-script module="ManagerOrder.js" />
<az-module-layout script-random='(id)=>"ManagerOrder(\"."+id+"\");"'>
    <div class="az-manager" data-form-size="az-modal-80">
        <div class="az-toolbar">
            <az-button class="btn btn-success btn-sm az-btn az-btn-add" cmd-key="f1" icon="far fa-plus-square" text="Tạo đơn hàng (F1)" />
        </div>
        <div class="az-search-manager">
            <div class="row">
                <div class="col-md-10">
                    <form class="az-search-form row">
                        <az-hidden-model model="Model" func="(item) => ((FormOrders)item).PageSize" />
                        <div class="col-md-3">
                            <az-order-status-select model="Model" func="(item) => ((FormOrders)item).PurchaseOrderStatus" class="az-input-change-search" null-text="Tất cả" label="Trạng thái hóa đơn"></az-order-status-select>
                        </div>
                        <div class="col-md-3">
                            <az-payment-select model="Model" func="(item) => ((FormOrders)item).PurchaseOrderPayment" class="az-input-change-search" null-text="Tất cả" label="Trạng thái thanh toán"></az-payment-select>
                        </div>
                        <div class="col-md-3">
                            <az-store-status-select 
                                                    class="az-input-change-search"
                                                    model="Model" 
                                                    func="(item)=>((FormOrders)item).PurchaseOrderImport" 
                                                    where-func="(item) => (item ==null|| item.Equals(PurchaseOrderImport.Export) || item.Equals(PurchaseOrderImport.WaitingExport))"
                                                    null-text="Tất cả" label="Trạng thái xuất kho">
                            </az-store-status-select>
                        </div>
                    </form>
                </div>
                @*<div class="col-md-2">
                    <div class="btn-group float-right ">
                        <az-button class="btn btn-warning  az-btn az-btn-search" icon="fas fa-search" text="Tìm kiếm" />
                        <az-button class="btn btn-warning  dropdown-toggle dropdown-icon az-btn" data-toggle="dropdown">
                            <span class="sr-only">Tìm kiếm nâng cao</span>
                            <div class="dropdown-menu" role="menu">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>
                            </div>
                        </az-button>
                    </div>
                </div>*@
            </div>
        </div>
        <div class="az-data-table" >
            <az-table data="Model.Data" FunKey="(item)=>((PurchaseOrderModel)item).Id" columns="Model.Columns" pagination="Model" is-delete="false"></az-table>
        </div>
        <div class="az-bottom-manager">
            <az-pagination pagination="Model" />
        </div>
    </div>
</az-module-layout>
