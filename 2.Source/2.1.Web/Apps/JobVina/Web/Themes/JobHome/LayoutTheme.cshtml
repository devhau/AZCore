@model LayoutTheme
<az-html class="az-layout az-admin layout-top-nav accent-primary">
    <head>
        <az-token-jwt />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Google Fonts -->
        <az-style link="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" />

        <!-- Vendor CSS Files -->
        <az-style link="assets/plugins/bootstrap/css/bootstrap.min.css" />
        <az-style link="assets/plugins/icofont/icofont.min.css" />
        <az-style link="assets/plugins/boxicons/css/boxicons.min.css" />
        <az-style link="assets/plugins/owl.carousel/assets/owl.carousel.min.css" />
        <az-style link="assets/plugins/venobox/venobox.css" />
        <az-style link="assets/plugins/aos/aos.css" />
        <!-- Template Main CSS File -->
        <az-style link="assets/jobhome/css/style.css" />
        <!-- Vendor JS Files -->
        <az-script link="assets/plugins/jquery/jquery.min.js" />
        <az-script link="assets/plugins/bootstrap/js/bootstrap.bundle.min.js" />
        <az-script link="assets/plugins/jquery.easing/jquery.easing.min.js" />
        <az-script link="assets/plugins/php-email-form/validate.js" />
        <az-script link="assets/plugins/waypoints/jquery.waypoints.min.js" />
        <az-script link="assets/plugins/counterup/counterup.min.js" />
        <az-script link="assets/plugins/owl.carousel/owl.carousel.min.js" />
        <az-script link="assets/plugins/isotope-layout/isotope.pkgd.min.js" />
        <az-script link="assets/plugins/venobox/venobox.min.js" />
        <az-script link="assets/plugins/aos/aos.js" />

        <!-- Template Main JS File -->
        <az-script link="assets/jobhome/js/main.js" />

    </head>
    <body>

        <!-- ======= Top Bar ======= -->
        <div id="topbar" class="d-none d-lg-flex align-items-center fixed-top">
            <div class="container d-flex">
                <div class="contact-info mr-auto">
                    <i class="icofont-envelope"></i> <a href="mailto:contact@jobvina.vn">contact@jobvina.vn</a>
                    <i class="icofont-phone"></i> +84 988 888 888
                </div>
                <div class="social-links">
                    <a href="#" class="twitter"><i class="icofont-twitter"></i></a>
                    <a href="#" class="facebook"><i class="icofont-facebook"></i></a>
                    <a href="#" class="instagram"><i class="icofont-instagram"></i></a>
                    <a href="#" class="skype"><i class="icofont-skype"></i></a>
                    <a href="#" class="linkedin"><i class="icofont-linkedin"></i></i></a>
                </div>
            </div>
        </div>

        <!-- ======= Header ======= -->
        <header id="header" class="fixed-top">
            <div class="container d-flex align-items-center">

                <h1 class="logo mr-auto"><a href="/">JobVINA<span>.</span></a></h1>
                <nav class="nav-menu d-none d-lg-block">
                    <ul>
                        <li class="active"><a href="/">Trang chủ</a></li>
                        <li><a href="/#about">Giới thiệu</a></li>
                        <li><a href="/#services">Dịch vụ</a></li>
                        <li><a href="/tim-viec-lam.az">Tìm việc làm</a></li>
                        <li><a href="/tim-don-vi-cung-ung.az">Đơn vị cung ứng</a></li>
                        <li><a href="/tim-cong-ty.az">Công ty sử dụng lao động</a></li>
                        <li><a href="#contact">Liên hệ</a></li>
                        @if (Model.IsAuth)
                        {
                        <li class="drop-down">
                            <a href="#">Chào, @Model.User.FullName</a>
                            <ul>
                                <li><a href="/profile.az">Thông tin tài khoản</a></li>
                                <li><a href="/admin.az">Trang quản lý</a></li>
                                <li><a href="/auth/login.az?h=logout">Đăng xuất</a></li>
                            </ul>
                        </li>
                        }
                        else
                        {

                            <li><a href="/auth/login.az?ref=/">Đăng nhập</a></li>
                        }
                    </ul>
                </nav><!-- .nav-menu -->

            </div>
        </header><!-- End Header -->

        @Model.BodyContent

        <footer id="footer">

            <div class="footer-newsletter">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <h4>Đăng ký nhận thông tin.</h4>
                            <p>Bạn muốn nhân thông tin việc làm qua mail.</p>
                            <form action="" method="post">
                                <input type="email" name="email"><input type="submit" value="Subscribe">
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-top">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-3 col-md-6 footer-contact">
                            <h3>JobVINA<span>.</span></h3>
                            <p>
                                Mễ trì hạ <br>
                                Mỹ Đình<br>
                                Hà Nội <br><br>
                                <strong>Phone:</strong> +84 988 888 888<br>
                                <strong>Email:</strong> contact@jobvina.vn<br>
                            </p>
                        </div>

                        <div class="col-lg-3 col-md-6 footer-links">
                            <h4>Danh mục</h4>
                            <ul>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Home</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">About us</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Services</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Terms of service</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Privacy policy</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-6 footer-links">
                            <h4>Dịch vụ</h4>
                            <ul>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Web Design</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Web Development</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Product Management</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Marketing</a></li>
                                <li><i class="bx bx-chevron-right"></i> <a href="#">Graphic Design</a></li>
                            </ul>
                        </div>

                        <div class="col-lg-3 col-md-6 footer-links">
                            <h4>Theo dõi</h4>
                            <p>Thông tin thông qua mạng xã hội.</p>
                            <div class="social-links mt-3">
                                <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
                                <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
                                <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
                                <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                                <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="container py-4">
                <div class="copyright">
                    &copy; Copyright <strong><span>JobVINA</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    Website đang chạy thử nghiệm.<br/>Đang chờ cấp phép sử dụng.
                </div>
            </div>
        </footer><!-- End Footer -->
        <div id="preloader"></div>
        <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>
    </body>
</az-html>