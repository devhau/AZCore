@model FormUpdateProduct
    <div class="az-update row" id="FormUpdateCatalog" role="form">
        <div class="form-group col-md-12">
            <az-code-model model="Model.Data" func="(item)=>((ProductModel)item).Code" label="Mã code" />
        </div>
        <div class="form-group col-md-12">
            <az-text-model model="Model.Data" func="(item)=>((ProductModel)item).Name" label="Tên sản phẩm" />
        </div>
        <div class="form-group col-md-12">
            <az-text-area-model model="Model.Data" func="(item)=>((ProductModel)item).Description" label="Mô tả sản phẩm" />
        </div>
        <div class="form-group col-md-12">
            <az-text-model model="Model.Data" func="(item)=>((ProductModel)item).Price" label="Giá sản phẩm" />
        </div>
        <div class="form-group col-md-12">
            <az-catalog-select model="Model.Data" func="(item)=>((ProductModel)item).CatalogId" label="Nhóm sản phẩm" />
        </div>
        <div class="form-group col-md-12">
            <az-status-select model="Model.Data" func="(item)=>((ProductModel)item).Status" label="Trạng thái" />
        </div>
    </div>
<az-script>

</az-script>