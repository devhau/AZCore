            <az-text-model model="Model.Data" func="(item)=>((PurchaseOrderModel)item).ImportNumber" value="1" label="Số lượng nhập" />
        </div>
        <div class="form-group col-md-4">
            <az-text-model model="Model.Data" func="(item)=>((PurchaseOrderModel)item).ImportPrice" value="100000" label="Giá nhập (VNĐ)" />
        </div>
        <div class="form-group col-md-4">
            <label>Thành tiền (VNĐ)</label>
            <label class="form-purchase-order" id="LabelThanhTien">100,000</label>
        </div>*@
</az-layout>
