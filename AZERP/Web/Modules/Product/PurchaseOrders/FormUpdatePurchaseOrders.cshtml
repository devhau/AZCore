@model FormUpdatePurchaseOrders
<az-style module="PurchaseOrders.css" />
<az-script module="PurchaseOrders.js" />
<az-layout class="az-update row" >
    <div class="form-group col-md-12">
        <az-text-model model="Model.Data" func="(item)=>((PurchaseOrderModel)item).Code" label="Mã đơn nhập hàng" />
    </div>
    <div class="form-group col-md-12">
        <az-supplier-select model="Model.Data" func="(item)=>((PurchaseOrderModel)item).SupplierCode" class="az-bind-data-item" attr=' data-form-bind=".supplier-form-bind" ' label="Nhà cung cấp" />
        <div class="supplier-form-bind">
            <h2 data-bind-by-name="Code"></h2>
            <h3 data-bind-by-name="Name"></h3>
        </div>
    </div>
    <div class="form-group col-md-12">
        <az-product-select model="Model.Data" func="(item)=>((PurchaseOrderModel)item).ProductCode" label="Sản phẩm" />
    </div>
    <div class="col-md-12 az-data-table">
        <table class="table table-bordered table-hover az-table " role="grid">
            <thead>
                <tr>
                    <td>Mã SKU</td>
                    <td>Tên sản phẩm</td>
                    <td>Số lượng nhập</td>
                    <td>Giá nhập</td>
                    <td>Thành tiền</td>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="col-md-12">
        <div class="list-info-money">
            <div class="item-info-money">
                <div class="label">Số lượng</div>
                <div class="value">0</div>
            </div>
            <div class="item-info-money">
                <div class="label">Tổng tiền (VNĐ)</div>
                <div class="value">0</div>
            </div>
            <div class="item-info-money">
                <div class="label">Chi phí (VNĐ)</div>
                <div class="value">0</div>
            </div>
            <div class="item-info-money">
                <div class="label"><b>Tiền cần trả (VNĐ)</b></div>
                <div class="value">0</div>
            </div>
        </div>
    </div>
