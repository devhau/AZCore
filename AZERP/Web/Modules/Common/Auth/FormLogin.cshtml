@model FormLogin
<az-style module="auth.css"/>
<div class="auth-box">
    <div class="auth-logo">
        <h3>AZ Store</h3>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <h4 class="login-box-msg">Đăng nhập</h4>
            @if (!String.IsNullOrEmpty(Model.Error))
            {
                <span style="color:red;font-weight:700;">@Model.Error</span>
            }

            <form action="" method="post" name="user-login">
                <div class="input-group mb-3">
                    <input type="email" name="azemail" class="form-control" placeholder="Email" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" name="azpassword" class="form-control" placeholder="Password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="icheck-primary">
                            <input type="checkbox" name="azremember" id="remember" value="true" />
                            <label for="remember">
                                Nhớ lần sau đăng nhập
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary btn-block az-btn">Đăng nhập</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center mb-3">
                <p>- OR -</p>
                <div class="row">
                    <div class="col-6">
                        <a href="/dang-nhap-bang-facebook.az" class="btn btn-block btn-primary az-btn">
                            <i class="fab fa-facebook mr-2"></i>Facebook
                        </a>
                    </div>
                    <div class="col-6">
                        <a href="/dang-nhap-bang-google.az" class="btn btn-block btn-danger az-btn">
                            <i class="fab fa-google-plus mr-2"></i>Google+
                        </a>
                    </div>
                </div>
            </div>
            <!-- /.social-auth-links -->
            <div class="row text-center">
                <div class="col-12">
                    <p>- OR -</p>
                </div>
                <div class="col-12">
                    <a href="/dang-ky.az" class="btn az-btn btn-danger  text-center form-control">Đăng ký tài khoản mới</a>
                </div>
            </div>
        </div>
        <!-- /.login-card-body -->
    </div>
        </div>
<!-- /.login-box -->